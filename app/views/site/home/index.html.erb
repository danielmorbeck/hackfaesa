

<!-- Full Width Image Header -->
<header class="header-image" >
    <div class="headline">
        <div class="container" >
            <h1>Meu Candidato</h1>
            <h2></h2>
        </div>
    </div>
</header>

<!-- Page Content -->
<div class="container">

    <hr class="featurette-divider">
    <% pull_left = true %>
    <!-- First Featurette -->
    <% @candidates.each do |candidate| %>
      
        <% if pull_left %>
          <div class="featurette" id="about">
              <img class="featurette-image img-circle img-responsive pull-left" src="<%= candidate.img %>">
              <h2 class="featurette-heading"><%= link_to candidate.name, candidate %></h2><br>
              <h3><span class="text-muted"id='partido'><%= candidate.political %></span>
              <br>
              <span class="text-muted" id='atualcargo'><%= candidate.job %></span>
              </h3>

              <% pull_left = false %>
  
          </div>
        <% else %>
          <div class="featurette" id="about">
            <img class="featurette-image img-circle img-responsive pull-right" src="<%= candidate.img %>">
            <h2 class="featurette-heading" style='padding-left: 35%;'><%= link_to candidate.name, candidate %></h2><br>
            <h3 ><span class="text-muted"id='partido' style='padding-left: 35%;'><%= candidate.political %></span>
              <br>
              <span class="text-muted" id='atualcargo' style='padding-left: 35%;'><%= candidate.job %></span>
            </h3>
            <% pull_left = true %>
          </div>
        <% end %>
      <% end %>


    <!-- Footer -->
    <footer>
        <div class="row">
            <div class="col-lg-12">
                <p>Copyright &copy; Meu Candidato 2018</p>
            </div>
        </div>
    </footer>

</div>
<!-- /.container -->




